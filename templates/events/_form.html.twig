{% block body %}
    {{ form_errors(EventsForm) }}
    {{ form_start(EventsForm, {'attr': {'class': 'grid grid-cols-3 gap-4 mt-3'}}) }}
        {{ form_row(EventsForm.name, {
            label: 'Nom',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            }
        }) }}
        {{ form_row(EventsForm.startAt, {
            label: 'Date',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            }
        }) }}
        {{ form_row(EventsForm.location, {
            label: 'Lieu',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                placeholder: "Salle, école, collège, etc."
            }
        }) }}
        {{ form_row(EventsForm.sendingEmail, {
            label: 'Envoi d\'email',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                placeholder: "Ajoutez les destinataires séparés par des virgules"
            }
        }) }}
        {{ form_row(EventsForm.startCalendar, {
            label: 'Début du calendrier',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            }
        }) }}
        {{ form_row(EventsForm.endCalendar, {
            label: 'Fin du calendrier',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            }
        }) }}
        <div class="col-span-3 sm:col-span-1 flex justify-around">

        {{ form_row(EventsForm.published, {
            label: 'Publier',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            }
        }) }}

        {{ form_row(EventsForm.archived, {
            label: 'Archiver',
            attr: {
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            }
        }) }}
        </div>

        <div class="col-span-3">
            {{ form_row(EventsForm.description, {
                label: 'Description',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 ml-1 mr-1"
                }
            }) }}
        </div>

        <div class="col-span-3 text-right">
            <button type="submit" class="bg-green-100 text-green-700 dark:bg-green-700 dark:text-white rounded-full py-1 px-16">Enregistrer</button>
        </div>
    {{ form_end(EventsForm) }}
{% endblock %}
