{% block body %}
    {{ form_errors(EventsForm) }}
    {{ form_start(EventsForm) }}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-3">
            {{ form_row(EventsForm.name, {
                label: 'Nom *',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
                    placeholder: "Nom de l\'événement"
                }
            }) }}
            {{ form_row(EventsForm.startAt, {
                label: 'Date *',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                }
            }) }}
            {{ form_row(EventsForm.location, {
                label: 'Lieu',
                required: false,
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
                    placeholder: "Salle, école, collège, etc."
                }
            }) }}
            {{ form_row(EventsForm.sendingEmail, {
                label: 'Envoi d\'email',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
                    placeholder: "Ajoutez les destinataires séparés par des virgules"
                }
            }) }}
            {{ form_row(EventsForm.startCalendar, {
                label: 'Début du calendrier',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                }
            }) }}
            {{ form_row(EventsForm.endCalendar, {
                label: 'Fin du calendrier',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                }
            }) }}

            <div class="flex justify-around">

            {{ form_row(EventsForm.published, {
                label: 'Publier',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"
                }
            }) }}

            {{ form_row(EventsForm.archived, {
                label: 'Archiver',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5"
                }
            }) }}
            </div>
        </div>
        <div class="mt-3">
            {{ form_row(EventsForm.description, {
                label: 'Description',
                attr: {
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 ml-1 mr-1"
                }
            }) }}
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="bg-green-100 text-green-700 rounded-full py-1 px-16 my-3">Enregistrer</button>
        </div>
    {{ form_end(EventsForm) }}
{% endblock %}
