{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="grid sm:grid-cols-1 md:grid-cols-2 gap-4">
    {% for e in events %}
        <a href="{{ path('app_events_show', {'id': e.id}) }}" class="p-6 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 {{ e.published ? "bg-pink-200" : "bg-white"}} hover:bg-gray-100">
            <div class="flex justify-between items-center">
                <h5 class="w-2/3 mb-2"><span class="text-2xl tracking-tight dark:text-white" style="color: #35b19a;">{{ e.name }}</span></h5>

                <div class="w-1/3 flex justify-between space-x-4">
                    <span class="tooltips" data-tooltip="Email" style="color: {{ e.sendingEmail ? 'rgb(53, 177, 154)' : '#9CA3AF' }}"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                    <span class="tooltips" data-tooltip="Afficherla date" style="color: {{ e.setDisplayStartAt ? 'rgb(53, 177, 154)' : '#9CA3AF' }}"><i class="fa-solid fa-clock"></i></span>
                    <span class="tooltips" data-tooltip="Afficher le lieu" style="color: {{ e.isDisplayLocation ? 'rgb(53, 177, 154)' : '#9CA3AF' }}"><i class="fa-solid fa-location-dot"></i></span>
                    <span class="tooltips" data-tooltip="Activer le commentaire pour l'inscription" style="color: {{ e.setDisplayCommentForSubscription ? 'rgb(53, 177, 154)' : '#9CA3AF' }}"><i class="fa-solid fa-message"></i></span>
                    <span class="tooltips" data-tooltip="Afficher le nom des personnes" style="color: {{ e.isDisplayPeopleName ? 'rgb(53, 177, 154)' : '#9CA3AF' }}"><i class="fa-solid fa-users"></i></span>
                    <span class="tooltips" data-tooltip="Planification automatique" style="color: {{ e.isSchedulingAuto ? 'rgb(53, 177, 154)' : '#9CA3AF' }}"><i class="fa-solid fa-users-gear"></i></span>
                </div>
            </div>
            <p class="font-normal text-gray-400 grid lg:flex justify-between">
                <span>{{ e.date }}</span>
                <span>{{ e.location }}</span>
                <span>{{e.nbSubscriptions}} Bénévole{{e.nbSubscriptions > 1 ? "s" : ""}} ({{e.reservedAvailability}}/{{e.nbPlans}})</span>
            </p>

        </a>
    {% endfor %}
{% endblock %}
